{
  "compilerOptions": {
    "target": "ES2018",                          
    "module": "CommonJS",                
    "lib": ["ESNext", "ES2016"],                     
    "allowJs": true,
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "types": [
      "@types/node",
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}